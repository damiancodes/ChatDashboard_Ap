{
  "name": "buzzing-chat",
  "version": "1.0.0",
  "description": "Real-time chat application with WebSocket support and Bumble-inspired design",
  "type": "module",
  "license": "MIT",
  "author": "TaskMaster Team",
  "keywords": [
    "chat",
    "websocket",
    "react",
    "nodejs",
    "real-time",
    "bumble-theme"
  ],
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "cross-env NODE_ENV=development node server/index.js",
    "client": "vite client",
    "build": "vite build client",
    "start": "cross-env NODE_ENV=production node server/index.js",
    "preview": "vite preview client",
    "clean": "rimraf dist client/dist",
    "lint": "eslint . --ext js,jsx --report-unused-disable-directives --max-warnings 0",
    "format": "prettier --write \"**/*.{js,jsx,json,md}\""
  },
  "dependencies": {
    "@tanstack/react-query": "^5.60.5",
    "express": "^4.21.2",
    "ws": "^8.18.0",
    "nanoid": "^5.0.9",
    "cors": "^2.8.5",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.20",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "postcss": "^8.5.0",
    "tailwindcss": "^3.4.16",
    "vite": "^6.0.5"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/buzzing-chat.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/buzzing-chat/issues"
  },
  "homepage": "https://github.com/your-username/buzzing-chat#readme"
}
